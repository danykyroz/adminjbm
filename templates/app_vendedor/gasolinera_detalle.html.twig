{% block body %}

<section class="mt-2">
  <div class="row">
   
    <div class="col s12 m12">
      <div class="card">
        <div id="map" style="width:100%;height:510px" >
          
         
        </div>
        <div class="card-content">
                    <span class="card-title">{{gasolinera.nombre}}</span>

          <p><b>{{gasolinera.delegacion.municipio}}</b></p>
          <p><span style="color: #e7711b">4.1  ★★★☆</span> (22)</p>
