{% extends 'base.html.twig' %}

{% block content_title %}Usuarios Punto Venta ({{puntoventa.nombre}}){% endblock %}

{% block global_actions %}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="button-action">
             <a class="btn btn-default" href="{{ path('puntos_venta_usuarios_new',{id:puntoventa.id}) }}">Nuevo Usuario Punto Venta</a>
        </div>
    </div>
</div>

{% endblock %}

{% block main %}
<div class="row">
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
<div class="card">

    <div class="header">
        <h2>
            <strong>Lista Usuarios Punto Venta</strong>
        </h2>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Username</th>
                <th>Acciones</th>
                
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.id }}</td>
                <td>{{ usuario.email }}</td>
                <td>{{ usuario.username }}</td>
                <td>
                    <a title="eliminar" href="{{ path('puntos_venta_usuarios_delete', {'id': usuario.id}) }}">
                          <i class="fa fa-fw fa-trash"></i>
                    </a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Sin Resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
    </div> 
</div>
</div>
   
{% endblock %}
