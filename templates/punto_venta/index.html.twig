{% extends 'base.html.twig' %}

{% block content_title %}Puntos Venta{% endblock %}

{% block global_actions %}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <div class="form-action form-action-search  action-search">
            <form method="get" action="/admin/punto/venta">
                <input type="hidden" name="action" value="search">
                <input type="hidden" name="entity" value="Flotillas">
                <input type="hidden" name="submenuIndex" value="">
                <div class="form-group">
                    <div class="form-widget">
                        <input class="form-control" type="search" name="query" value="" placeholder="Buscar">
                    </div>
                </div>
            </form>
        </div>
        <div class="button-action">
            <a class="btn btn-default" href="{{ path('punto_venta_new') }}">Nuevo Punto Venta</a> 
        </div>
    </div>
</div>

{% endblock %}

{% block main %}
<div class="row">
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
<div class="card">

    <div class="header">
        <h2>
            <strong>Lista Puntos Venta</strong>
        </h2>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Documento</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Email</th>
                <th>Celular</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for punto_ventum in punto_ventas %}
            <tr>
                <td>{{ punto_ventum.id }}</td>
                <td>{{ punto_ventum.documento }}</td>
                <td>{{ punto_ventum.nombres }}</td>
                <td>{{ punto_ventum.apellidos }}</td>
                <td>{{ punto_ventum.email }}</td>
                <td>{{ punto_ventum.celular }}</td>
                <td>{{ punto_ventum.createdAt ? punto_ventum.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ punto_ventum.updatedAt ? punto_ventum.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                     <a href="{{ path('punto_venta_edit', {'id': punto_ventum.id}) }}">
                         <i class="fa fa-fw fa-pencil"></i>
                     </a>

                    <a href="{{ path('punto_venta_show', {'id': punto_ventum.id}) }}">
                        <i class="fa fa-fw fa-eye"></i>
                    </a>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    </div> 
</div>
</div> 
{% endblock %}
