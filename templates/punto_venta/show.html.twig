{% extends 'base.html.twig' %}

{% block content_title %}Punto De Venta{% endblock %}

{% block body %}
    <div class="row">
<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
    <div class="card">
        <div class="header">
            <h2>
                <strong>Punto de Venta ({{punto_ventum.nombres}})</strong>
            </h2>
            
        </div>
    <div class="card-body table-responsive">
    <table class="table table-condensed">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ punto_ventum.id }}</td>
            </tr>
            <tr>
                <th>Documento</th>
                <td>{{ punto_ventum.documento }}</td>
            </tr>
            <tr>
                <th>Nombres</th>
                <td>{{ punto_ventum.nombres }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ punto_ventum.apellidos }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ punto_ventum.email }}</td>
            </tr>
            <tr>
                <th>Celular</th>
                <td>{{ punto_ventum.celular }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ punto_ventum.createdAt ? punto_ventum.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ punto_ventum.updatedAt ? punto_ventum.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('punto_venta_edit', {'id': punto_ventum.id}) }}">Editar</a>

     <a class="btn btn-default" href="{{ path('punto_venta_index') }}">Volver al Listado</a>

    {{ include('punto_venta/_delete_form.html.twig') }}
{% endblock %}
