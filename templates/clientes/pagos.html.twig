{% block body_javascript %}
<script type="text/javascript">
   var cheque=true;

   function exportar(){
    $("#exportar").val("true");
    $("#frm-filtros-avanzado").submit();

   }

   function soloNumeros(e){
      var key = window.Event ? e.which : e.keyCode
      return (key >= 48 && key <= 57)
    }

 $('document').ready(function(){

      $(".reportar_cuenta").click(function(e){
        e.preventDefault();
        var id=$(this).data('id');
        $("#pagoid_cuenta").val(id);
        $("#reportarCuenta").modal('show');

      })

      $("#mes").keydown(function(){
         valor=$(this).val();
         if(valor>12){
          $(this).val("12");
          return false;
         }
         if(valor<0){
          return false;
         }
         if(valor=='00'){
           $(this).val("01");
         }
      })

      $(".editar").click(function(e){
        e.preventDefault();
        var id=$(this).data('id');
        var tr=$("#tr_pago_"+id);
        var valor=$("#td_pago_valor_"+id).html();
        var folio=$("#td_pago_folio_"+id).html();
        var beneficiario=$("#td_pago_beneficiario_"+id).html();
        $("#exampleModalEditar").modal('show');
        var valor2=valor.replace('$','');
        valor2 =valor2.replace(/,/g, '');

        $('.valor').val(valor2.trim());
        $('.folio').val(folio.trim());
        $('.pagoid').val(id);
        $('.beneficiario').val(beneficiario.trim());


      })

      $(".eliminar").click(function(e){
      e.preventDefault();
      var url=$(this).attr('href');

        swal({
          title: "Eliminar",
          text: "Al eliminar las facturas asociadas pasaran a cuentas por cobrar!",
          type: "warning",
          showCancelButton: true,
          confirmButtonColor: "#DD6B55",
          cancelButtonText: "No",
          confirmButtonText: "Si, Eliminar!",
          closeOnConfirm: false
      }, function () {
          location.href=url;
      });

    })
    

   $('input.CurrencyInput').on('blur', function() {
    const value = this.value.replace(/,/g, '');
    this.value = parseFloat(value).toLocaleString('en-US', {
      style: 'decimal',
      maximumFractionDigits: 2,
      minimumFractionDigits: 2
    });
  });

   $(".tipo").change(function(){

        if($(this).val()==1){
          $("#div-folio").show();
          cheque=true;
        }
        if($(this).val()==2){
          $("#folio").val("");
          $("#div-folio").hide();
          cheque=false;
        }

  })



     $("#btn-reset").click(function(e){
        e.preventDefault();
        $('#tipo').val("");
        $('#cliente').val("");
        $('#fecha_inicial').val("");
        $('#fecha_final').val("");

        $('#frm-clientes-avanzado').submit();
     })

     $("#btn-cuenta-submit").click(function(e){
      e.preventDefault();
      if($("#valor_cuenta").val()==""){
         swal("Por favor ingrese una valor.");
        return false;
      }
      if($("#folio_cuenta").val()==""){
         swal("Por favor ingrese una # de folio.");
        return false;
      }
      if($("#file_cuenta").val()==""){
         swal("Por favor sube un archivo.");
        return false;
      }
      $("#form-cuenta").submit();

     });


    $('#btn-pagos').click(function(e){
      e.preventDefault();
      $(".tipo").change(function(){
        
        if($(this).val()==2){
          $("#folio").val("");
        }

      })

      if($("#cliente").val()==""){
        swal("Por favor seleccione un cliente.");
        return false;
      }
      
      if($("#valor").val()=="" ) {
        swal("Por favor ingrese una valor.");
        return false;
      }
      
      if($("#folio").val()=="" && cheque===true){
          swal("Por favor ingresa un # de folio.");
        return false;
      }
    
      
      if($("#fecha").val()==""){
        swal("Por favor ingresa una fecha válida");
        return false;
      }

      if($('#tipopago').val()==""){
       swal("Por favor seleccione un tipo de pago");
        return false;
      }

      const valor = $("#valor").val().replace(/,/g, '');
      $("#valor").val(valor);
      $("#form-pago").submit();
    })
  })       
</script>

