{% block body_javascript %}
<script type="text/javascript">
   var cheque=true;

 $('document').ready(function(){


      $(".eliminar").click(function(e){
      e.preventDefault();
      var url=$(this).attr('href');

        swal({
          title: "Eliminar",
          text: "Al eliminar este comprobante las facturas se trasladarÃ¡n a cuentas por pagar!",
          type: "warning",
          showCancelButton: true,
          confirmButtonColor: "#DD6B55",
          cancelButtonText: "No",
          confirmButtonText: "Si, Eliminar!",
          closeOnConfirm: false
      }, function () {
          location.href=url;
      });

    })

   $('input.CurrencyInput').on('blur', function() {
    const value = this.value.replace(/,/g, '');
    this.value = parseFloat(value).toLocaleString('en-US', {
      style: 'decimal',
      maximumFractionDigits: 2,
      minimumFractionDigits: 2
    });
  });

   $(".tipo").change(function(){

        if($(this).val()==1){
          $("#div-folio").show();
          cheque=true;
        }
        if($(this).val()==2){
          $("#folio").val("");
          $("#div-folio").hide();
          cheque=false;
        }

  })



     $("#btn-reset").click(function(e){
        e.preventDefault();
        $('#tipo').val("");
        $('#cliente').val("");
        $('#fecha_inicial').val("");
        $('#fecha_final').val("");

        $('#frm-clientes-avanzado').submit();
     })


    $('#btn-pagos').click(function(e){
      e.preventDefault();
      $(".tipo").change(function(){
        
        if($(this).val()==2){
          $("#folio").val("");
        }

      })
      
      if($("#valor").val()=="" ) {
        alert("Por favor ingresa una valor.");
        return false;
      }
      
      if($("#folio").val()=="" && cheque===true){
          alert("Por favor ingresa un folio.");
        return false;
      }
    
      
      if($("#fecha").val()==""){
        alert("Por favor ingresa una fecha valida");
        return false;
      }

      if($("#file").val()==""){
        alert("Por favor ingresa una archivo valido.");
        return false;
      }

      const valor = $("#valor").val().replace(/,/g, '');
      $("#valor").val(valor);
      $("#form-pago").submit();
    })
  })       
</script>

{% endblock body_javascript %}
