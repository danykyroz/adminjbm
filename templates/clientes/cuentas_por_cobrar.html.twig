{% block body_javascript %}
<script type="text/javascript">
    
  function exportar(){
    $("#exportar").val("true");
    $("#frm-filtros-avanzado").submit();

   }
  $(document).ready(function(){
    var id="";

    $(".detalle_factura").click(function(e){
      e.preventDefault();
      var id=$(this).data('id');
      var url=$(this).attr('href');
      $.get(url,{},function(data){
        $('#modal-body').html(data);
        $("#exampleModalDetalle").modal('show');

      })
    })

    $(".eliminar").click(function(e){
      e.preventDefault();
      var url=$(this).attr('href');

        swal({
          title: "Eliminar",
          text: "Está seguro de eliminar este registro?",
          type: "warning",
          showCancelButton: true,
          confirmButtonColor: "#DD6B55",
          cancelButtonText: "No",
          confirmButtonText: "Si, Eliminar!",
          closeOnConfirm: false
      }, function () {
          location.href=url;
      });

    })

     $("#btn-reset").click(function(e){
        e.preventDefault();
        $('#tipo').val("");
        $('#cliente').val("");
        $('#fecha_inicial').val("");
        $('#fecha_final').val("");

        $('#frm-clientes-avanzado').submit();
     })

    $("#btn-enviar").click(function(e){
      e.preventDefault();
      var action=$("#form-modal").attr('action');
      var data=$("#form-modal").serializeArray();

      $.post(action,data,function(data){
        if(data=="ok"){
          alert("Cobro asociado exitsamente");
          location.reload();
        }else{
          alert(data);
        }
        $("#exampleModalCenter").modal('hide');
      })
    })

    $(".comprobante").click(function(e){
      e.preventDefault();
      $("#cobroid").val($(this).data('id'));
      $("#pago").val("");

    })
        
  })
</script>

{% endblock %}




