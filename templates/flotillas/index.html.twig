{% extends 'base.html.twig' %}

{% block content_title %}Listado Flotillas{% endblock %}

{% block busqueda_general %}

    <div class="search-box">
        <form method="get" action="/admin/flotillas">
            <input type="hidden" name="action" value="search">
            <input id="search" type="search" name="query" value="" placeholder="Buscar">
            <button class="icon">
                <i class="fa fa-search"></i>
            </button>
        </form>
    </div>

{% endblock %}


{% block global_actions %}

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="button-action">
                <a class="btn btn-default" href="{{ path('flotillas_new') }}">Nueva Flotilla</a>
            </div>
        </div>
    </div>

{% endblock %}


{% block main %}
<div class="row">
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
<div class="card">

    <div class="header">
        <h2>
            <strong>Lista Flotillas</strong>
        </h2>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-condensed">
            <thead>
                <thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(pagination, 'Id', 'f.id') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Nombre', 'f.nombre') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Documento', 'f.documento') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Fecha Creación', 'f.createdAt') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Fecha Actualización', 'f.updatedAt') }}</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for flotilla in flotillas %}
                    <tr>
                        <td>{{ flotilla.id }}</td>
                        <td>{{ flotilla.nombre }}</td>
                        <td>{{ flotilla.documento }}</td>
                        <td>{{ flotilla.createdAt ? flotilla.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ flotilla.updatedAt ? flotilla.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td class="actions">
                            
                            <a href="{{ path('flotillas_edit', {'id': flotilla.id}) }}">
                             <i class="fa fa-fw fa-pencil"></i>    
                            </a> 
                            <a href="{{ path('flotillas_show', {'id': flotilla.id}) }}">
                                <i class="fa fa-fw fa-eye"></i>
                            </a> 

                            <a title="usuarios" href="{{ path('flotillas_usuarios', {'id': flotilla.id}) }}">
                                <i class="fa fa-fw fa-user"></i>
                            </a>
                            
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div> 
</div>
</div> 
{% endblock %}
