{% extends 'base.html.twig' %}

{% block content_title %}Gasolineras{% endblock %}

{% block busqueda_general %}

    <div class="search-box">
        <form method="get" action="/admin/gasolineras">
            <input type="hidden" name="action" value="search">
            <input id="search" type="search" name="query" value="" placeholder="Buscar">
            <button class="icon">
                <i class="fa fa-search"></i>
            </button>
        </form>
    </div>

{% endblock %}

{% block global_actions %}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="button-action">
            <a class="btn btn-default" href="{{ path('gasolineras_new') }}">Nueva Gasolinera</a> 
        </div>
    </div>
</div>

{% endblock %}

{% block body %}
<div class="row">
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
<div class="card">

    <div class="header">
        <h2>
            <strong>Lista Gasolineras</strong>
        </h2>
    </div>

    <div class="card-body table-responsive">
    <table class="table table-condensed">
    <thead>
            <tr>
                <th>Id</th>
                <th>Fecha Creación</th>
                <th>Nombre</th>
                <th>Nombre Encargado</th>
                <th>Teléfono Encargado</th>
                <th>Delegación</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for gasolinera in gasolineras %}
            <tr>
                <td>{{ gasolinera.id }}</td>
                <td>{{ gasolinera.createdAt ? gasolinera.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ gasolinera.nombre }}</td>
                <td>{{ gasolinera.nombreEncargado }}</td>
                <td>{{ gasolinera.telefonoEncargado }}</td>
                <td>{{ gasolinera.delegacion }}</td>
                <td>{{ gasolinera.direccion }}</td>
                <td>
                     <a href="{{ path('gasolineras_edit', {'id': gasolinera.id}) }}">
                         <i class="fa fa-fw fa-pencil"></i>      
                     </a>
                   
                    <a href="{{ path('gasolineras_show', {'id': gasolinera.id}) }}">
                         <i class="fa fa-fw fa-eye"></i> 
                    </a>

                    <a href="{{ path('gasolineras_usuarios', {'id': gasolinera.id}) }}">
                         <i class="fa fa-fw fa-user"></i> 
                    </a>

                     <a href="{{ path('puntos_venta_list_gasolinera', {'id': gasolinera.id}) }}">
                          <i class="fa fa-fw fa-shopping-basket"></i> 
                     </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    </div> 
</div>
</div> 
{% endblock %}
