{% extends 'base_app.html.twig' %}
{% block style %}

{% endblock %}
{% block header %}
      <nav>
      <div class="nav-wrapper principal_bg">
        <ul class="left">
          <li><a href="javascript:window.history.back();"><i class="material-icons">keyboard_backspace</i></a></li>
        </ul>
        <a href="#!" class="brand-logo">Permergas</a>
        <ul class="right">
          <li><a class='dropdown-button' href='#' data-activates='menu2'><i class="material-icons">more_vert</i></a></li>
        </ul>
        <!-- Menu 2 -->
        <ul id='menu2' class='dropdown-content'>
          <li><a href="#!">Ajustes de Seguridad</a></li>
          <li><a href="#!">Solicitar Credito</a></li>
          <li class="divider"></li>
          <li><a href="#!">Información</a></li>
          <li><a href="#">Cerrar Sesión</a></li>
        </ul>

      </div>
    </nav>
{% endblock%} 
{% block body %}
  <section class="center">
    <div class="circle valign-wrapper">
      <div class="value_container">
        <h2 class="value_grl">{{wallet.saldo+wallet.saldoCredito}}</h2>
        <span>MXN</span>
      </div>
    </div>
    <p class="center">Saldo disponible para canje por Gasolina</p>
    <a href="{{asset('app/qr')}}" class="waves-effect waves-darken btn sec_btn">Agregar Saldo</a>

  </section>

  <section class="pricing-table">
    <div class="container">
      <div class="row ">
        <div class="col s6">
          <h4 class="date_title"> <span>Valor por litro</span> <br> {{fecha|date('d/m/y')}} </h4>
        </div>
        <div class="col s6">
          <h3 class="gas_price">1090<span>MXN</span> </h3>
        </div>
      </div>
    </div>
  </section>

    <section class="pricing-table">
    <div class="container">
      <div class="row ">
        <div class="col s12">
          <h4 class="date_title"> Transaciones</h4>
          <div id="no-more-tables" class="card-body table-responsive">
        <table class="table table-condensed">
            <thead>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Fecha</th>
                        <th>Cliente</th>
                        <th>Moneda</th>
                        <th>Valor</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>  
                {% for transaccion in transacciones %}
                    <tr>
                       <td data-title="Id">{{transaccion.id}}</td>
                       <td data-title="Fecha">{{transaccion.createdAt|date('Y-m-d H:i:s')}}</td>
                       <td data-title="Cliente">{{transaccion.wallet.cliente.nombres}} {{transaccion.wallet.cliente.apellidos}}</td>
                       <td data-title="Moneda">MX</td>
                       <td data-title="Valor">
                        <span {% if transaccion.tipoTransaccion==1 %} class="success" {% else %} class="danger" {% endif%} >                       {{transaccion.valor|number_format(2)}}
                        </span>
                        </td>
                       <td data-title="Estado">{{transaccion.estado}}</td>
                    </tr>
                {% endfor %} 
                </tbody>
            </table>
        </div>
        </div>
        
      </div>
    </div>
  </section>



 
 {% endblock %}