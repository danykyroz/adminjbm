{% extends 'base_app.html.twig' %}
{% block style %}
<style type="text/css">
  th,td{
    border-bottom:1px solid #ccc;
  }
</style>
{% endblock %}
{% block header %}
   <nav>
      <div class="nav-wrapper principal_bg">
       
        <a href="#!" class="brand-logo" id="header_title" >Permergas</a>
        <ul class="right">
          <li><a class='dropdown-button' href='#' data-activates='menu2'><i class="material-icons">more_vert</i></a></li>
        </ul>
        <!-- Menu 2 -->
        <ul id='menu2' class='dropdown-content'>
          <li><a href="#!">Ajustes de Seguridad</a></li>
          <li><a href="#!">Solicitar Credito</a></li>
          <li><a href="#!">Medios Pago</a></li>
          <li class="divider"></li>
          <li><a href="#!">Información</a></li>
          <li><a href="{{asset('app/logout')}}">Cerrar Sesión</a></li>
        </ul>

      </div>
    </nav>
{% endblock%} 
{% block body %}
  <section class="center">
    <div class="circle valign-wrapper">
      <div class="value_container">
        <h2 class="value_grl">{{wallet.saldo+wallet.saldoCredito}}</h2>
        <span>MXN</span>
      </div>
    </div>
    <p class="center">Saldo disponible para canje por Gasolina</p>
    <a href="{{asset('app/recargar')}}" class="waves-effect waves-darken btn sec_btn">Agregar Saldo</a>

  </section>

  <section class="pricing-table">
    <div class="container">
      <div class="row ">
        <div class="col s6">
          <h4 class="date_title"> <span>Valor por litro</span> <br> {{fecha|date('d/m/y')}} </h4>
        </div>
        <div class="col s6">
          <h3 class="gas_price">1090<span>MXN</span> </h3>
        </div>
      </div>
    </div>
  </section>

    <section class="pricing-table">
    <div class="container">
      <div class="row ">
        <div class="col s12">
          <h4 class="date_title"> Movimientos</h4>
          <div id="no-more-" class="card-body table-responsive">
        <table class="table table-responsive">
            <thead>
                <thead>
                    <tr>
                        <th colspan="3"></th>
                       
                    </tr>
                </thead>
                <tbody style="">  
                {% for transaccion in transacciones %}
                    <tr>
                       <td data-title="Fecha">
                        {% if transaccion.tipoMovimiento.id==1 %}
                        <b>Recarga Digital</b>
                        {%else %}
                        <b>Compra Gasolina</b>
                        {% endif%}
                        <br/>
                       {{transaccion.createdAt|date('d/m/d h:i A')}}</td>
                       <td>
                        {% if transaccion.tipoMovimiento.id==1 %}
                        <i class="material-icons" style="color: green" >arrow_upward</i>
                        {% else %}
                        <i class="material-icons" style="color: red">arrow_downward</i>
                        {% endif %}
                      </td>
                       <td data-title="Valor">
                        <span {% if transaccion.tipoMovimiento.id==1 %} class="success-transaccion" {% else %} class="danger-transaccion" {% endif%} >
                          {{transaccion.valor|number_format(2)}}
                        </span>
                        </td>
                       
                    </tr>
                {% endfor %} 
                </tbody>
            </table>
        </div>
        </div>
        
      </div>
    </div>
  </section>
 
{% endblock %}
{% block javascripts %}

{% endblock %}
